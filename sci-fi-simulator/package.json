{
  "name": "sci-fi-simulator",
  "version": "0.1.0",
  "private": true,
  "description": "A sci-fi simulation application",
  "author": "Mechphy Software",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run next\" \"npm run electron-dev\"",
    "next": "next dev",
    "electron-dev": "wait-on http://localhost:3000 && electron .",
    "build:next": "cross-env ELECTRON=true next build",
    "build:electron": "npm run build:next && electron-builder --win",
    "build:electron:safe": "npm run build:next && electron-builder --win --publish=never",
    "build:electron:debug": "npm run build:next && electron-builder --win --publish=never --config.compression=store",
    "start": "electron .",
    "lint": "next lint",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist-next out .next"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "curl": "^0.1.4",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.511.0",
    "mb-util": "^1.1.30",
    "moment": "^2.30.1",
    "next": "^15.4.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "serial": "^0.0.9",
    "sql.js": "^1.13.0",
    "websockets": "^0.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/leaflet": "^1.9.18",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.1.1",
    "postcss": "^8",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.mechphy.simulator",
    "productName": "SciFiSimm-NEXT",
    "directories": {
      "buildResources": "assets",
      "output": "distt-next"
    },
    "files": [
      "electron.js",
      "out/**/*",
      "package.json",
      "!node_modules/@img/sharp-darwin-arm64/**/*",
      "!node_modules/@img/sharp-darwin-x64/**/*",
      "!node_modules/@img/sharp-linux-arm64/**/*",
      "!node_modules/@img/sharp-linux-x64/**/*",
      "!node_modules/@emnapi/**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-setup.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-setup.${ext}",
      "runAfterFinish": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "extraMetadata": {
      "author": {
        "name": "Mechphy Software",
        "email": "support@mechphy.com"
      },
      "copyright": "Copyright Â© 2025 Mechphy Software"
    }
  }
}
